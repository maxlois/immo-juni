{% extends "base/_fontC.html.twig" %}
{% block title %}Connexion{% endblock %}
{% block body %}
<body class="bg-gradient-primary">
   <div class="container"
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 ">
                               <img src="{{asset('images/maison2.png')}}">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">CONNEXION</h1>
                                    </div>
                                    <form method="post" class="user">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}
                                        {% if app.user %}
                                            <div class="mb-3">
                                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnectez-vous</a>
                                            </div>
                                        {% endif %}
                                         <div class="form-group">
                                           <input type="email" value="{{ last_username }}" name="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Entrez votre adresse Email..." autocomplete="email" required autofocus>
                                        </div>
                                          <div class="form-group">
                                            <input type="password" name="password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Mot de passe"  autocomplete="current-password" required>
                                        </div>
                                           <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember
                                                    Me</label>
                                            </div>
                                        </div>
                                        <input type="hidden" name="_csrf_token"
                                            value="{{ csrf_token('authenticate') }}"
                                        >
                                        <button class="btn btn-lg btn-primary btn-user btn-block" type="submit">
                                           Connexion
                                        </button>
                                        <hr>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="#">Mot de passe oublié?</a>
                                    </div>
                                    <div class="text-center">
                                    <a class="small" href="{{path('app_register')}}">Créer un compte!</a> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </body>
{% endblock %}
